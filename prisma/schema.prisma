generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//数据模型api指南：https://prisma.yoga/reference/api-reference/prisma-schema-reference#%E6%95%B0%E6%8D%AE%E6%BA%90%EF%BC%88datasource%EF%BC%89

model Menu {
  menuId    Int     @id @default(autoincrement())
  menuName  String  @unique(map: "name") @db.VarChar(50)
  menuType  String  @db.VarChar(50)
  createBy  String? @db.VarChar(50)
  updateBy  String? @db.VarChar(50)
  createdAt String? @default(dbgenerated("(now())")) @db.VarChar(50)
  updatedAt String? @default(dbgenerated("(now())")) @db.VarChar(50)
  parentId  Int     @db.Int
  remark    String? @db.VarChar(500)
  seq       Int?    @db.Int
  status    Int?    @db.Int
  icon      String? @db.VarChar(50)
  perms     String? @db.VarChar(50)
  deleted   Int     @default(0)
}

model Role {
  roleId    Int        @id @default(autoincrement())
  roleName  String     @unique(map: "roleName") @db.VarChar(50)
  createBy  String?    @db.VarChar(50)
  updateBy  String?    @db.VarChar(50)
  createdAt String?    @default(dbgenerated("(now())")) @db.VarChar(50)
  updatedAt String?    @default(dbgenerated("(now())")) @db.VarChar(50)
  isAdmin   Int?       @default(0) @db.Int
  remark    String?    @db.VarChar(500)
  deleted   Int?       @default(0) @db.Int
  seq       Int?       @default(0) @db.Int
  status    Int?       @default(0) @db.Int
  roleList  roleList[] @ignore
}

model User {
  password     String
  salt         String?
  email        String?
  sex          Int?
  tel          String?
  status       Int?       @default(0) @db.Int
  nickName     String?
  name         String?
  loginIp      String?
  loginTime    String?
  wxOpenid     String?
  wxSessionKey String?
  remark       String?
  deleted      Int        @default(0) @db.Int
  orgId        Int
  orgName      String
  userId       Int        @id @default(autoincrement())
  userName     String     @unique(map: "User_userName_key")
  createBy     String
  createdAt    String     @default("(now())")
  updateBy     String
  updatedAt    String     @default("(now())")
  roleList     roleList[] @ignore

  @@map("user")
}

/// The underlying table does not contain a valid unique identifier and can therefore currently not be handled by Prisma Client.
model roleList {
  role_id Int?
  user_id Int?
  roles   Role? @relation(fields: [role_id], references: [roleId], onDelete: NoAction, onUpdate: NoAction, map: "user_role_ibfk_1")
  user    User? @relation(fields: [user_id], references: [userId], onDelete: NoAction, onUpdate: NoAction, map: "user_role_ibfk_2")

  @@index([role_id], map: "role_id")
  @@index([user_id], map: "user_id")
  @@ignore
}
